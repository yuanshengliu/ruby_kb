

<script type="text/javascript">
       bkLib.onDomLoaded(function() { nicEditors.allTextAreas() });
</script>

<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :topic %><br />
    <%= select_tag "article[topic_id]", options_for_select(Topic.all.collect{|t| [t.name, t.id]}, @article.topic_id) %>
  </div>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, :cols=>"100", :rows=>"15" %>
  </div>
  
  <div class="field">
    <%= f.label :user  %><br />
    <%= select_tag "article[user_id]", options_for_select(User.all.collect{|t| [t.name, t.id]}, @article.user_id) %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
